<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context="dev.tran.nam.sortalgorithm.view.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvSortName"
            android:textSize="@dimen/text_size_14sp"
            android:layout_marginTop="@dimen/positive_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/startLine"
            app:layout_constraintEnd_toEndOf="@+id/endLine"
            android:text="Selection Sort"/>

    <androidx.viewpager.widget.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/vpSort"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingTop="@dimen/positive_20dp"
            android:paddingBottom="@dimen/positive_20dp"
            android:paddingStart="@dimen/positive_50dp"
            android:paddingEnd="@dimen/positive_50dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSortName"
            app:layout_constraintBottom_toTopOf="@+id/btGo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <tran.nam.widget.RippleButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/btGo"
            android:padding="@dimen/positive_15dp"
            android:text="Go"
            android:layout_marginBottom="@dimen/positive_30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/startLine"
            app:layout_constraintEnd_toEndOf="@+id/endLine"
            tools:text="Go"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/positive_30dp"
            android:id="@+id/startLine"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="@dimen/positive_30dp"
            android:id="@+id/endLine"/>


</androidx.constraintlayout.widget.ConstraintLayout>

